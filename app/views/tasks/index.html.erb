
<div class="container">

  <h1>My Tasks</h1>

  <ul style="list-style-type: none">
    <% @tasks.each do |task| %>
    <li>
      <input type="checkbox"><%= link_to task.title, task_path(task)%>
      <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do%>
      <i class="fa-regular fa-trash-can" ></i>
          <% end %>
    </li>
      <% end %>
  </ul>

  <div>
    <%= link_to "Add a new task", new_task_path%>
  </div>

</div>
